<%= form_for(resource, as: resource_name, :class=> "form", url: session_path(resource_name)) do |f| %>

<fieldset>
  <legend>Log In</legend>
    <label><%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </label>

    <label><%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </label>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
</fieldset>

<%= render "devise/shared/links" %>

      <div class="score text-center"><%= @response[0]["recommendation_score"] %></div>
    </div>

    <div class="recipe-title">
      <!-- <%= link_to (@response[0]["recipeName"]), "http://www.yummly.com/recipe/#{@response[0]["id"]}" %> -->
      <%= @response[0]["recipeName"] %>
    </div>

    <div class="recipe-action">

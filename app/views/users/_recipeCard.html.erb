<div class="row">
  <div class="recipe-card small-6 small-offset-3 columns">
    <div class="recipe-image">
      <%= link_to image_tag(@response[0]["largeImage"]), "http://www.yummly.com/recipe/#{@response[0]["id"]}" %>
